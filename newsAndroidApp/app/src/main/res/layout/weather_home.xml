<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_below="@+id/top_nav_bar"
    android:layout_height="110dp">
    <ImageView
        android:id="@+id/weather_background_image"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:background="@drawable/layout_bg"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/weather_city_name"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="30dp"
        android:textSize="28sp"
        android:textStyle="bold"
        android:elevation="5dp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/weather_state_name"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/weather_city_name"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:elevation="5dp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/weather_temp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginStart="260dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:elevation="5dp"
        android:textColor="@android:color/white"/>
    <TextView
        android:id="@+id/weather_summary"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_below="@id/weather_temp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="280dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:elevation="5dp"
        android:textColor="@android:color/white"/>
</RelativeLayout>