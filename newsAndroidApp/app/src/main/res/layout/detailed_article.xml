<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <include layout="@layout/detailed_article_title" android:id="@+id/detailed_article_top_bar"/>
    <ImageView
        android:id="@+id/detailed_image"
        android:layout_below="@+id/detailed_article_top_bar"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/layout_bg"
        android:scaleType="fitXY"
        android:layout_height="260dp"/>
    <TextView
        android:id="@+id/detailed_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@android:color/black"
        android:gravity="center_horizontal"
        android:layout_below="@+id/detailed_image"/>
    <TextView
        android:id="@+id/detailed_section"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textSize="16sp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@id/detailed_title"
        android:layout_alignParentStart="true"/>
    <TextView
        android:id="@+id/detailed_date"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@id/detailed_title"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:id="@+id/detailed_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detailed_date"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        android:maxLines="30"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:layout_marginEnd="15dp" />
    <TextView
        android:id="@+id/detailed_view_full"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/detailed_text"
        android:textAlignment="center"
        android:textSize="23sp"
        android:textStyle="bold"
        />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="150dp"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:progressTint="#FFFFFF" />
    <TextView
        android:id="@+id/progressIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBar"
        android:layout_centerHorizontal="true"
        android:text="@string/fetching_news"/>
</RelativeLayout>